# Ghost Configuration Template
# Copy this file to .env.local and fill in the actual values

# Ghost Admin Configuration
GHOST_HOST=blog.shadyknollcave.io
GHOST_USERNAME=admin
GHOST_PASSWORD=your_secure_password_here
GHOST_EMAIL=admin@shadyknollcave.io

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_DATABASE=ghost
MYSQL_USERNAME=ghost
MYSQL_PASSWORD=your_mysql_password_here

# Ingress/TLS Configuration
INGRESS_CLASS_NAME=cilium
INGRESS_CONTROLLER=cilium
CERT_MANAGER_ISSUER=letsencrypt-prod
CLUSTER_ISSUER=letsencrypt-prod
CILIUM_SERVICE_TYPE=LoadBalancer

# Storage Configuration
STORAGE_CLASS_NAME=local-path
GHOST_STORAGE_SIZE=20Gi
MYSQL_STORAGE_SIZE=10Gi

# Resource Limits (Production)
GHOST_CPU_LIMIT=2000m
GHOST_MEMORY_LIMIT=2Gi
GHOST_CPU_REQUEST=1000m
GHOST_MEMORY_REQUEST=1Gi

# Mail Configuration
MAIL_SERVICE=SMTP
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=true
MAIL_USER=your-smtp-username
MAIL_PASSWORD=your-smtp-password

# ArgoCD Configuration
ARGOCD_NAMESPACE=argocd
ARGOCD_SERVER=argocd.shadyknollcave.io
